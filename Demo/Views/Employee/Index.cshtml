<h1>Employees</h1>

@model List<Employee>

<table style="width:50%">
    <tr style="background-color:dimgrey">
        <th style="width:30%">
            Name
        </th>
        <th style="width:10%">
            Total Time Worked
        </th>
    </tr>
    @foreach (var emp in Model)
    {
        <tr style='@(emp.TotalTimeWorked < 100 ? "background-color:hsl(5, 50%, 50%);" : "")'>
            <td>@emp.EmployeeName</td>
            <td>@emp.TotalTimeWorked hours</td>
        </tr>
    }
</table>
